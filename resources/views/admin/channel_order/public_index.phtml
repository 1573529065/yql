        var yanzhen1 = function (ids) {
            $.ajax({
                url: '/channel_order/select_invoice',
                type: 'POST',
                dataType: 'JSON',
                data: {ids: ids, type: 2},
                success: function (res) {
                    if (res.code == 200) {
                        loadEditInvoiceLog(ids, res.data.payee, res.data.total_money, res.data.invoice_id, openEditInvoiceBox);
                    } else {
                        layer.msg(res.msg, {icon: 5})
                    }
                }
            });
        };

        var loadEditInvoiceLog = function (ids, payee, total_money, invoice_id, callback) {
            $.ajax({
                url: '/invoice/invoice_list',
                type: 'POST',
                dataType: 'JSON',
                data: {name: payee},
                success: function (json) {
                    if (json.code == 200) {
                        var list = json.data.list;
                        var tr = '';
                        $.each(list, function (i, e) {
                            var ischecked = invoice_id == e.id ? 'checked' : '';
                            tr += '<tr valign="middle">' +
                                '<td><input type="radio" name="id" '+ischecked+' value="' + e.id + ' "></td>' +
                                '<td>' + e.number + '</td>' +
                                '<td>' + e.amount + '</td>' +
                                '<td>' + e.order_amount + '</td>' +
                                '<td>' + e.addtime + '</td>' +
                                '</tr>';
                        });
                        $('input[name="jsonData"]').val(JSON.stringify(list));
                        $('input[name="name"]').val(payee);
                        $('input[name="money"]').val(total_money);
                        $('.banned-log').html(tr);
                        $('#page1').html(json.data.page);
                        $('.edit_box_id').val(ids);
                        form.render('radio');
                        callback(ids);
                    } else {
                        layer.msg(json.msg, {icon: 5})
                    }
                }
            });
        };

        var openEditInvoiceBox = function () {
            layer.open({
                title: "编辑发票",
                area: ['980px', '600px'],
                type: 1,
                shadeClose: true,
                content: $('#lay-box-edit'),
            });
        };

        form.on('submit(edit_invoice)', function (obj) {
            var data = obj.field;
            var invoice_amount = 0;
            var invoice_order_amount = 0;
            var jsonData = JSON.parse(data.jsonData);
            $.each(jsonData, function (i, e) {
                if (parseInt(e.id) == parseInt(data.id)) {
                    invoice_amount = parseFloat(e.amount);
                    invoice_order_amount = parseFloat(data.money) + parseFloat(e.order_amount); // 丢精
                }
            });
            if (parseFloat(invoice_amount) != parseFloat(invoice_order_amount)) {
                layer.confirm('“订单总金额”和“发票金额”不一致,确认修改吗?', {
                    btn: ['确认', '取消']
                }, function () {
                    submit_edit_invoice(data);
                }, function (index) {
                    //    取消的回调
                    layer.close(index);
                });
                return false;
            } else {
                submit_edit_invoice(data);
                return false;
            }
        });

        var submit_edit_invoice = function (data) {
            $.ajax({
                url: '/channel_order/edit_invoice',
                type: "POST",
                dataType: "JSON",
                data: {data: data},
                success: function (json) {
                    if (json.code == 200) {
                        layer.msg('修改成功', {icon: 1}, function () {
                            window.setTimeout(function () {
                                window.location.reload();
                            }, 100)
                        })
                    } else {
                        layer.msg(json.msg, {icon: 5, time: 1000});
                    }
                }
            });
        };
        /** 编辑发票 结束 **/


        form.on('checkbox(check-all)', function (data) {
            $('input[name="ids"]').prop('checked', data.elem.checked);
            form.render('checkbox');
        });

        /** 通过 开始 **/
        function batPast(ids) {
            $.ajax({
                url: '/channel_order/past',
                type: 'POST',
                dataType: 'JSON',
                data: {ids: ids},
                success: function (res) {
                    if (res.code == 200) {
                        layer.msg('修改成功', {icon: 1, time: 1000}, function () {
                            layer.closeAll();
                            window.location.reload();
                        })
                    } else {
                        layer.msg(res.msg, {icon: 5})
                    }
                }
            })
        }

        $('.past').on('click', function () {
            var ids = [];
            ids.push($(this).closest('tr').data('id'));

            layer.confirm('确定通过吗?', {btn: ['确认', '取消']}, function () {
                batPast(ids);
            });
        });
        $('#pastAll').on('click', function () {
            var ids = [];
            $('input[name="ids"]:checked').each(function () {
                ids.push($(this).val())
            });
            if (ids.length <= 0) {
                layer.msg('请选择订单', {icon:5, time:1000});
                return;
            }
            if ($('#status').val() != 1) {
                layer.msg('筛选条件-订单状态不是【待审核】,不可以一键操作');
                return;
            }
            layer.confirm('确定要全部通过吗？', {btn: ['确定', '取消']}, function () {
                batPast(ids);
            });
        });
        /** 通过 结束 **/

        // 搜索订单号
        $('#order_no').on('keydown', function (event) {
            if (event.keyCode == 8) {
                $('#invoice_num').val('')
            }
        });
        autocomplete.init({
            elem: "#order_no",
            textLength: 2,//触发长度
            delay: 200,//触发延迟
            callback: {
                data: function (val, render) {
                    $.ajax({
                        type: "post",
                        dataType: "json",
                        url: "/channel_order/autocomplete",
                        data: {name: val},
                        success: function (json) {
                            if (json.code == 200) {
                                render(json.data);
                            } else {
                                layer.alert(json.msg);
                            }
                        }
                    });
                },
                selected: function (data) {
                    console.log(data);
                    $('#order_no').val(data.value)
                },
                close: function () {
                }
            }
        });

        // 搜索渠道账号
        $('#username').on('keydown', function (event) {
            if (event.keyCode == 8) {
                $('#channel_id').val('')
            }
        });
        autocomplete.init({
            elem: "#username",
            textLength: 2,//触发长度
            delay: 200,//触发延迟
            callback: {
                data: function (val, render) {
                    $.ajax({
                        type: "post",
                        dataType: "json",
                        url: "/channel/autocomplete",
                        data: {name: val},
                        success: function (json) {
                            if (json.code == 200) {
                                render(json.data);
                            } else {
                                layer.alert(json.msg);
                            }
                        }
                    });
                },
                selected: function (data) {
                    console.log(data);
                    $('#channel_id').val(data.value)
                },
                close: function () {
                }
            }
        });

        // 搜索渠道账号 弹框自动搜索无下拉框,需要后期调试
        $('#username_box').on('keydown', function (event) {
            if (event.keyCode == 8) {
                $('#channel_id_box').val('')
            }
        });
        autocomplete.init({
            elem: "#username_box",
            textLength: 2,//触发长度
            delay: 200,//触发延迟
            callback: {
                data: function (val, render) {
                    $.ajax({
                        type: "post",
                        dataType: "json",
                        url: "/channel/autocomplete",
                        data: {name: val},
                        success: function (json) {
                            if (json.code == 200) {
                                render(json.data);
                            } else {
                                layer.alert(json.msg);
                            }
                        }
                    });
                },
                selected: function (data) {
                    console.log(data);
                    $('#channel_id_box').val(data.value)
                },
                close: function () {}
            }
        });

        //搜索发票号
        $('#invoice_num').on('keydown', function (event) {
            if (event.keyCode == 8) {
                $('#order_no').val('')
            }
        });
        autocomplete.init({
            elem: "#invoice_num",
            textLength: 2,//触发长度
            delay: 200,//触发延迟
            callback: {
                data: function (val, render) {
                    $.ajax({
                        type: "post",
                        dataType: "json",
                        url: "/invoice/autocomplete_number",
                        data: {name: val, type: 1},
                        success: function (json) {
                            if (json.code == 200) {
                                render(json.data);
                            } else {
                                layer.alert(json.msg);
                            }
                        }
                    });
                },
                selected: function (data) {
                    console.log(data);
                    $('#order_no').val(data.order_no)
                },
                close: function () {
                }
            }
        });

        //开始日期
        var insStart = laydate.render({
            elem: '#start_time',
            done: function (value, date) {
                //更新结束日期的最小日期
                insEnd.config.min = lay.extend({}, date, {
                    month: date.month - 1
                });

                //自动弹出结束日期的选择器
                insEnd.config.elem[0].focus();
            }
        });

        //结束日期
        var insEnd = laydate.render({
            elem: '#end_time',
            done: function (value, date) {
                //更新开始日期的最大日期
                insStart.config.max = lay.extend({}, date, {
                    month: date.month - 1
                });
            }
        });

        // 指定生成弹框-结束日期
        mydate.setTime(mydate.getTime() - 24 * 60 * 60 * 1000); // 指定生成结束时间最大为 昨天
        var yesterday = mydate.getFullYear() + "-" + (mydate.getMonth() + 1) + "-" + mydate.getDate();

        laydate.render({
            elem: '#end_date_box',
            max: yesterday,
            done: function (value, date) {
                //更新开始日期的最大日期
                insStart.config.max = lay.extend({}, date, {
                    month: date.month - 1
                });
            }
        });

    });
</script>
