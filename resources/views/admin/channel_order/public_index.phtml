<script>
    layui.extend({
        autocomplete: '/layuiadmin/autocomplete/autocomplete'
    }).use(['form', 'autocomplete', 'laydate', 'layer', 'upload'], function () {
        var $ = layui.$
            , form = layui.form,
            layer = layui.layer,
            autocomplete = layui.autocomplete,
            laydate = layui.laydate,
            upload = layui.upload;
        var mydate = new Date();

        /** 自动提交 **/
        form.on('select(search_status)', function () {
            $('#search_form').submit();
        });


        /**  导出 **/
        $('#export_id').on('click', function () {
            window.location.reload();
        });

        /** 导入 **/
        //指定允许上传的文件类型
        upload.render({
            elem: '#import_public',
            url: '/channel_order/import?type=1',
            accept: 'file', //普通文件
            done: function(res){
                if (res.code == 200) {
                    console.log(res);
                    layer.msg(res.msg, {icon: 1, time: 2000});
                }else {
                    console.log(res);
                    layer.msg(res.msg, {icon: 5, time: 1000});
                }
            }
        });

        /** 指定生成 开始 **/
        $('#auto_order_one').on('click', function () {
            layer.open({
                title: "指定生成",
                area: ['500px', '300px'],
                type: 1,
                shadeClose: true,
                content: $('#lay-box-auto-order-one'),
            });
        });

        form.on('submit(submit_auto_order_one)', function (obj) {
            var data = obj.field;
            $.ajax({
                url: '/channel_order/auto_order_one',
                type: "POST",
                dataType: "JSON",
                data: data,
                success: function (json) {
                    if (json.code == 200) {
                        layer.msg('操作成功', {icon: 1, time: 1000}, function () {
                            window.setTimeout(function () {
                                window.location.reload();
                            }, 100);
                        });
                    } else {
                        layer.msg(json.msg, {icon: 5, time: 1000});
                    }
                }
            });
            return false;
        });
        /** 指定生成 结束 **/

        // 按规定当月1-5日才能生成
        /** 一键生成订单 开始 **/
        $("#auto_order").on('click', function () {

            if (mydate.getDate() > 5) {
                layer.prompt({
                    title: '输入 "按规定当月1-5日才能生成"',
                    formType: 0
                }, function (res, index) {
                    if (res != "按规定当月1-5日才能生成"){
                        layer.msg('输入错误',{icon:5,time:1000});
                        return false;
                    }else{
                        window.setTimeout(function () {
                            layer.close(index);
                        }, 500);
                        sub_auto_order();
                    }
                });
            }else {
                sub_auto_order();
            }
        });

        var sub_auto_order = function(){
            $.ajax({
                url: '/channel_order/auto_order',
                type: 'POST',
                dataType: 'JSON',
                success: function (res) {
                    if (res.code == 200) {
                        layer.msg('生成成功', {icon:1, time: 1000}, function () {
                            window.location.reload();
                        })
                    } else {
                        layer.msg(res.msg, {icon: 5, time: 1000})
                    }
                }
            })
        };
        /** 一键生成订单 结束 **/

        /** 拒绝开始 **/
        $('tr').on('click', '.message', function (e) {
            var id = $(this).closest('tr').data('id');
            $('.lay_box_id').val(id);
            $(".remarks").val('');
            layer.open({
                title: "发消息",
                area: ['880px', '300px'],
                type: 1,
                shadeClose: true,
                content: $('#lay-box-message'),
            });
        });
        form.on('submit(denial_sub)', function (obj) {
            var data = obj.field;
            $.ajax({
                url: '/channel_order/denial',
                type: "POST",
                dataType: "JSON",
                data: data,
                success: function (json) {
                    if (json.code == 200) {
                        layer.msg('操作成功', {icon: 1, time: 1000}, function () {
                            window.setTimeout(function () {
                                window.location.reload();
                            }, 100);
                        });
                    } else {
                        layer.msg(json.msg, {icon: 5, time: 1000}, function () {
                            window.setTimeout(function () {
                                layer.closeAll();
                            }, 100);
                        });
                    }
                }
            });
            return false;
        });
        /** 拒绝结束 **/

        /** 选择发票  开始**/
        $('.select_invoice').on('click', function () {
            var ids = [];
            ids.push($(this).closest('tr').data('id'));
            yanzhen(ids);
        });

        $('#select_invoice_all').on('click', function () {
            var ids = [];
            $('input[name="ids"]:checked').each(function () {
                ids.push($(this).val());
            });
            if (ids.length <= 0) {
                layer.msg('请选择订单', {icon: 5, time: 1000});
                return false;
            }
            yanzhen(ids);
        });

        var yanzhen = function (ids) {
            $.ajax({
                url: '/channel_order/select_invoice',
                type: 'POST',
                dataType: 'JSON',
                data: {ids: ids},
                success: function (res) {
                    if (res.code == 200) {
                        loadBannedLog(ids, res.data.payee, res.data.total_money, openLockBox);
                    } else {
                        layer.msg(res.msg, {icon: 5})
                    }
                }
            });
        };

        var loadBannedLog = function (ids, payee, total_money, callback) {
            $.ajax({
                url: '/invoice/invoice_list',
                type: 'POST',
                dataType: 'JSON',
                data: {name: payee},
                success: function (json) {
                    if (json.code == 200) {
                        var list = json.data.list;
                        var tr = '';
                        $.each(list, function (i, e) {
                            tr += '<tr valign="middle">' +
                                '<td><input type="radio" name="id" value="' + e.id + ' "></td>' +
                                '<td>' + e.number + '</td>' +
                                '<td>' + e.amount + '</td>' +
                                '<td>' + e.order_amount + '</td>' +
                                '<td>' + e.addtime + '</td>' +
                                '</tr>';
                        });
                        $('input[name="jsonData"]').val(JSON.stringify(list));
                        $('input[name="name"]').val(payee);
                        $('input[name="money"]').val(total_money);
                        $('.banned-log').html(tr);
                        $('#page').html(json.data.page);
                        $('.box_id').val(ids);
                        form.render('radio');
                        callback(ids);
                    } else {
                        layer.msg(json.msg, {icon: 5})
                    }
                }
            });
        };

        var openLockBox = function () {
            layer.open({
                title: "选择发票",
                area: ['980px', '600px'],
                type: 1,
                shadeClose: true,
                content: $('#lay-box'),
            });
        };

        form.on('submit(confirm_invoice)', function (obj) {
            var data = obj.field;
            var invoice_amount = 0;
            var invoice_order_amount = 0;
            var jsonData = JSON.parse(data.jsonData);
            $.each(jsonData, function (i, e) {
                if (parseInt(e.id) == parseInt(data.id)) {
                    invoice_amount = parseFloat(e.amount);
                    invoice_order_amount = parseFloat(data.money) + parseFloat(e.order_amount); // 丢精
                }
            });
            if (parseFloat(invoice_amount) != parseFloat(invoice_order_amount)) {
                layer.confirm('“订单总金额”和“发票金额”不一致,确认提交吗?', {
                    btn: ['确认', '取消']
                }, function () {
                    submit_invoice(data);
                }, function (index) {
                //    取消的回调
                    layer.close(index);
                });
                return false;
            }else {
                submit_invoice(data);
                return false;
            }
        });

        var submit_invoice = function (data) {
            $.ajax({
                url: '/channel_order/confirm_invoice',
                type: "POST",
                dataType: "JSON",
                data: {data: data},
                success: function (json) {
                    if (json.code == 200) {
                        layer.msg('操作成功', {icon: 1}, function () {
                            window.setTimeout(function () {
                                window.location.reload();
                            }, 100)
                        })
